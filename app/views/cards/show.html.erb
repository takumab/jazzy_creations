<h1><%= @card.title %></h1>

<div class="row">
  <div class="col s12 m12">
    <div class="card">
      <div class="card-image">
        <%= image_tag(@card.c_image) %>
        <span class="card-title"><%= @card.title%></span>
      </div>
      <div class="card-small">
        <div class="card-content">
          <p><%= @card.description %></p>
        </div>
      </div>
      <div class="card-action">
        <%= link_to 'Share', @card %>
      </div>
    </div>
  </div>
</div>
